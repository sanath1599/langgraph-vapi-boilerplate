# Copy this file to .env and adjust as needed.
# cp example.env .env

PORT=4000
DATABASE_URL="file:./data/appointments.db"
# Logging: LOG_LEVEL=debug|info|warn|error (min level). Console always shows info and error levels.
LOG_LEVEL=info
# Optional: console minimum level (default info; use error to only log errors to console)
# LOG_CONSOLE_LEVEL=info
# File logging: set to true to enable. Files go to backend/logs/
# LOG_FILE_INFO=true
# LOG_FILE_DEBUG=false
# LOG_FILE_ERROR=true
# LOG_FILE_WARN=true
DEFAULT_COUNTRY=CA

# Admin login (used by seed and login endpoint)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# JWT for admin sessions (use a long random string in production)
JWT_SECRET=change-me-in-production

# Require x-api-key header for public APIs (caller-id, users, appointments, etc.). Set false for local dev.
REQUIRE_API_KEY=true


